---
import { siteLabels } from "../model/site-labels";
import Logo from "./Logo.astro";
---

<section class="full-screen flex items-center justify-center px-6">
  <div class="logo-wrap" aria-label="ARGOT">
    <Logo size={320} />
  </div>
</section>

<section class="full-screen flex items-center justify-center px-4">
  <div>
    <article
      class="fade-in text-white px-6 py-8 
      md:px-10 md:py-12 rounded-3xl 
      shadow-2xl max-w-3xl bg-black/15 ring-1 
      ring-white/15 backdrop-blur-md"
    >
      <p
        class="prose prose-invert drop-shadow-[0_0_2px_rgba(0,0,0,0.8)] text-[1.25rem] md:text-[1.5rem] leading-relaxed m-0"
      >
        {siteLabels.description.intro}
      </p>
    </article>
  </div>
</section>

<style is:global>
  .logo-wrap {
    width: min(320px, 70vw);
  }

  .logo-wrap svg {
    width: 100%;
    height: auto;
  }

  /* Fallback para navegadores sin scroll animations */
  .fade-in {
    opacity: 1;
  }

  /* Scroll-driven fade */
  @supports (animation-timeline: view()) {
    .fade-in {
      opacity: 0;
      animation: fadeIn 3s ease-out forwards;
      animation-timeline: view();
      /* ajust√° el rango de visibilidad en que ocurre el fade */
      animation-range: entry 10% cover 40%;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }
  }
</style>
