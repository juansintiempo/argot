---
import { siteLabels } from "../model/labels";
import "../styles/global.css";

const title = "ARGOT";
const description = "ARGOT";
const url = "https://argot.com.ar";
const image = `${url}/favicon.svg`;

const showImageBg = Astro.props.showImageBg ?? false;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={url} />
    <meta property="og:image" content={image} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />

    <!-- Fonts are loaded locally via src/styles/global.css (@font-face) -->
    <link rel="preload" href="/fonts/AcuminPro-Regular.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/fonts/VinetaBT-Regular.woff2" as="font" type="font/woff2" crossorigin />
  </head>
  <body>
    <div class="relative w-full h-full overflow-hidden overflow-y-auto safe-y">
      {
        !showImageBg && (
          <div class="fixed inset-0 z-0 pointer-events-none">
            <video
              autoplay
              loop
              muted
              playsinline
              poster="/sky.webp"
              class="w-full h-full object-cover"
            >
              <source src="/sky.webm" type="video/webm" />
              <source src="/sky.mp4" type="video/mp4" />
            </video>
          </div>
        )
      }
      {
        showImageBg && (
          <img
            src="/sky.webp"
            alt=""
            class="fixed inset-0 min-w-[200%] h-full object-cover moving-bg -z-10 pointer-events-none"
          />
        )
      }
      <header class="fixed top-0 left-0 w-full text-white overflow-hidden">
        <div class="marquee marquee--top" aria-label={siteLabels.banner}>
          <div class="marquee__inner animate-header">
            <span class="marquee__text">{siteLabels.banner}</span>
            <span class="marquee__text" aria-hidden="true">{siteLabels.banner}</span>
          </div>
        </div>
      </header>

      <main class="relative z-10">
        <slot />
      </main>

      <footer class="fixed bottom-0 left-0 w-full text-white overflow-hidden">
        <div class="marquee marquee--bottom" aria-label={siteLabels.banner}>
          <div class="marquee__inner animate-footer">
            <span class="marquee__text">{siteLabels.banner}</span>
            <span class="marquee__text" aria-hidden="true">{siteLabels.banner}</span>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>

<style>

  .marquee {
    width: 100%;
    white-space: nowrap;
  }

  .marquee__inner {
    display: inline-flex;
    gap: 3rem;
    align-items: center;
    will-change: transform;
  }

  .marquee__text {
    display: inline-block;
    font-family: "Acumin Pro", system-ui, -apple-system, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    font-weight: 400;
    font-size: 1.125rem; /* ~text-lg */
    line-height: 2.5rem; /* ~leading-10 */
    padding-inline: 1rem;
    text-shadow: 0 0 2px rgba(0, 0, 0, 0.8);
  }

  .moving-bg {
    animation: moveLeft 90s ease-in-out infinite alternate;
  }

  .animate-header {
    animation: moveRight 90s linear infinite running;
  }

  .animate-footer {
    animation: moveLeft 180s linear infinite running;
  }

  @keyframes moveLeft {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(-50%);
    }
  }

  @keyframes moveRight {
    from {
      transform: translateX(-50%);
    }
    to {
      transform: translateX(0);
    }
  }
</style>
